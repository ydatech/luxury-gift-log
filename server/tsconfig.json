{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["prisma.config.ts", "node_modules", "dist"]
}
